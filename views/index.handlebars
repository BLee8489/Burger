<img class="center" src="/assets/img/burger.jpg">

<div class="container">
    <div class="row">
        <h1 class="text-center">Eat-The-Burger!</h1>
        <div class="d-flex justify-content-center">
        </div>

    </div>

    <div class="row">
        <div class="col-md-6">
            <h5 class="text-center">Burgers Updated</h5>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <ul>
                    {{burger_name}} <br>
                    <button class="devour-button btn btn-success" data-id="{{this.id}}"
                        data-burgerDevoured="{{devoured}}">"Devour it!"</button>
                </ul>

                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h5 class="text-center">Devoured</h5>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <ul>
                    {{burger_name}} <br>
                    <button class="delete-burger btn btn-success" data-id="{{this.id}}">DELETE</button>
                </ul>

                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="d-flex justify-content-center">
            <h5>Add Another Burger</h5>
        </div>
        <div class="d-flex justify-content-center">
            <div class="card">
                <div class="card-body">
                    <form id="create-form">
                        <div class="form-group">
                            <input type="text" id="burger-name" name="name">
                        </div>
                        <br>
                        <div class="text-center">
                            <button id="submit" type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>