<h1>Eat-The-Burger!</h1>
<img class="burgerImg" src="{{{./public/assets/img/burger.jpg}}}">

<ul id="displayBurger">
    {{#each burgers}}
    {{#unless this.devoured}}
    {{id}}.{{burger_name}}
    <button value={{id}} class="devouredID">Devour it!</button><br>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<div id="all-devoured">
    {{#each burgers}}
    {{#if this.devoured}}
    {{id}}.{{burger_name}}<br>
    {{/if}}
    {{/each}}
</div>

<h2>Add a Burger</h2>
<form id="create-form">

    <div class="form-group">
        <label for="ca">Which burger would you like to order?</label>
        <input type="text" id="burger_input" name="name">
    </div>

    <button id="submitButton" type="submit">Submit Burger</button>
</form>